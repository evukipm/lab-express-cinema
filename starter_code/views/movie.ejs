<div class="movie-detail">
  <div class="poster"><img src="<%= movie.image %>"></div>
  <div class="details">
    <h2><%= movie.title %></h2>
    <h3>Directed by: <%= movie.director %></h3>
    <h4>Stars: </h4>
    <ul>
      <% movie.stars.forEach(star => {%>
        <li><%= star %></li>
      <%})%>
    </ul>
    <h4>Description</h4>
    <p><%= movie.description %></p>
    <% const showtime = movie.showtimes.join(' | ') %>
    <p><%= showtime %></p>
    <a href="/movies/<%= movie._id %>/edit">Editar</a>
    <form action="/movies/<%= movie._id %>/delete" method="post">
      <input type="submit" value="delete">
    </form>
  </div>
</div>